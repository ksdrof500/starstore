<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_new</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:color">@color/windowBackground</item>
        <item name="android:textColorSecondary">@color/windowBackground</item>
        <item name="colorPrimaryDark">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/windowBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_home</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_login</item>
    </style>

    <style name="HomeItemTitle">
        <item name="android:layout_marginStart">@dimen/item_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/item_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/item_margin_start_end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">@integer/max_lines_item_home</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="HomeItemValue">
        <item name="android:layout_marginStart">@dimen/item_margin</item>
        <item name="android:layout_marginEnd">@dimen/item_margin</item>
        <item name="android:layout_marginTop">@dimen/item_margin_start_end</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/text_medium_little</item>
    </style>

    <style name="HomeItemSubTitle">
        <item name="android:layout_marginStart">@dimen/item_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/item_margin_start_end</item>
        <item name="android:layout_marginBottom">@dimen/item_margin_start_end</item>
        <item name="android:drawablePadding">@dimen/item_description_padding</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_little</item>
    </style>

    <style name="DefaultEmptyView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="DetailSubtitle">
        <item name="android:layout_marginTop">@dimen/item_margin</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListItemTitle" parent="DetailSubtitle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ListItemSubtitle" parent="DetailSubtitle">
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="textDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorDialog</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="editTextDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/text_medium_little</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="textHistory">
        <item name="android:layout_width">@dimen/weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_total</item>
        <item name="android:maxLines">@integer/max_lines_item_home</item>
    </style>

    <style name="AboutTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="AboutItem" parent="AboutTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/about_option_cell</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
        <item name="android:background">@drawable/shape_facebook</item>
        <item name="android:padding">@dimen/item_description_margin</item>
        <item name="android:text">@string/login_facebook</item>
        <item name="android:textSize">@dimen/text_medium_large</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:layout_marginBottom">@dimen/item_sub_title_height</item>
        <item name="android:src">@android:color/transparent</item>
    </style>

</resources>
